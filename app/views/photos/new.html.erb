<%= content_for(:title, "Add Photo") %>

<div class="add-photo-page container">
  <h1>Add a photo</h1>
  <%= form_for @photo, :url => photos_path, :html => { :multipart => true } do |f| %>
    <% if @photo.errors.any? %>
      <div class="red error_messages">
        <h2>Invalid photo upload</h2>
        <ul>
          <% @photo.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :image %><br />
      <%= f.file_field :image %>
    </div>
    <div class="field">
      <%= f.label :description %><br />
      <%= f.text_field :description, class: 'form-control' %>
    </div>
    <div class="actions"><%= f.submit "Add Photo" %></div>
  <% end %>
</div>
